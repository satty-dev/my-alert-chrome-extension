{
  "manifest_version": 3,
  "name": "Alert Extension",
  "version": "1.0",
  "description": "A Chrome extension that shows an alert when the icon is clicked.",
  "action": {
    "default_icon": "icon.png",
    "default_title": "Click to show alert"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"]
}
